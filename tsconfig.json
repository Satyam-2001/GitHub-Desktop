{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "dist",
    "lib": ["ES2021"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode"],
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test", "src/webviews"]
}

